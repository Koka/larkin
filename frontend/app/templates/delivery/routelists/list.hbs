<h3 class="noselect">Available route lists</h3>
<table class="ui very basic {{if model.length 'selectable'}} compact celled table">
  <thead>
    <tr>
      <th>Delivery date</th>
      <th>Delivery shift</th>
      <th>Truck</th>
      <th>Driver</th>
      <th>Stop count</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |routelist|}}
      <tr>
        <td>{{routelist.deliveryDate}}</td>
        <td>{{routelist.deliveryShift}}</td>
        <td>{{routelist.loadTruck.name}}</td>
        <td>{{routelist.loadTruck.driver.name}}</td>
        <td>{{routelist.stopCount}}</td>
        <td class="buttons-cell">
          <button class="ui icon button" title="Download PDF version" {{action 'downloadPDF' routelist}}>
              <i class="download icon"></i>
          </button>
          {{#if (can "edit stops in routelists")}}
            <button class="ui icon button" title="Edit stop order" {{action 'editRoutelist' routelist}}>
                <i class="edit icon"></i>
            </button>
          {{else}}
            <button class="ui icon button" title="View stop order" {{action 'editRoutelist' routelist}}>
                <i class="unhide icon"></i>
            </button>
          {{/if}}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="6" class="empty-table-message">No route lists are available!</td></tr>
    {{/each}}
  </tbody>
</table>
